<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TeloNews</title>
    <link rel="stylesheet" href="style.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Serif:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- nav bar part-->
    <div class="navBar">
      <button class="logobtn">
        <img
          class="logo"
          src="myImages\TeloNews.png"
          alt="TeloNews Logo"
          onclick="window.location.href='/'"
        />
      </button>

      <input type="text" class="search" placeholder="Search for news..." />

      <div class="Authecation">
        <button class="login">Sign In</button>
        <button class="signup">Create account</button>
      </div>
    </div>
    <!-- nav bar part-->

    <div class="menuBtnsDiv">
      <button class="menuBtn">General</button>
      <button class="menuBtn">Health</button>
      <button class="menuBtn">Science</button>
      <button class="menuBtn">Technology</button>
      <button class="menuBtn">Entertainment</button>
      <button class="menuBtn">Sports</button>
    </div>

    <hr class="hrLine" />

    <!--the actullay news-->

    <div class="newsContainer">

      <div class="NewsCard">
        <img class="newsImage" src="public\myImages\images.webp" alt="News Image" />

        <div class="newsMetaTop">
          <span> cetogory : 'General' </span>
          <span>date : june kwarapas  </span>
        </div>

        <h1 class="title">'No title' %></h1>
        <p class="newsDescription">'No description available.' %> </p>

        <div class="newsMetaBottom">
          <span>Author:</span>
          <span>Name:</span>
          <span>URL: </span>
          <span>Country: US</span>
        </div>

        <br />

      </div>

    <hr class="hrLineforText" />

    <script src="index.js"></script>
  </body>
</html>
